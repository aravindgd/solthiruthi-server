.panel.panel-default
  .panel-heading
    .page-header
      %h3 Listing dictionaries

  .panel-body
    / TODO: Need to add ajax-based pagination
    #dictionary-search.search
      %form#search.navbar-form.navbar.navbar-left{action: dictionaries_path, method: "get"}
        %input.form-control#searchText{name: "searchText", placeholder: "Search partial match on word/meaning", type: "text", size: 40, value: @searchText}
        %button.btn.btn-default{type: "submit"} Submit
      %a.btn.btn-primary.navbar-right{href: new_dictionary_path} New Dictionary

    %br
    %table.table.table-striped.table-bordered.table-hover.table-condensed
      %tr
        %th Word
        %th Meaning
        %th{colspan: 3} Actions

      - @dictionaries.each do |dictionary|
        %tr
          %td= dictionary.word
          %td= dictionary.meaning
          %td
            = link_to 'Show', dictionary
            = link_to 'Edit', edit_dictionary_path(dictionary)
            = link_to 'Destroy', dictionary, method: :delete, data: { confirm: 'Are you sure?' }
